                        <Frame  HasShadow="False" Padding="5" BackgroundColor="White" CornerRadius="5" BorderColor="#F5F5F5">
                            <custom:BorderlessEntry TextChanged="BorderlessEntry_TextChanged_1" Text="{Binding AdvertisementModel.Compound}" Placeholder="{Static resx:AppResources.NelCompound}" PlaceholderColor="#999CA0" FontSize="16"></custom:BorderlessEntry>

