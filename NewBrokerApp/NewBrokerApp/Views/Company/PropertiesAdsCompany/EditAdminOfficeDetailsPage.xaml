                VerticalOptions="Start"
                 IsLabelFloating="True"
                BoxMinWidth="10"
              
         CornerRadius="10"
                TextHorizontalAlignment="Start"
               >
                    <dxe:ComboBoxEdit.ItemTemplate>
                        <DataTemplate>
                            <StackLayout  Margin="10" Orientation="Horizontal">
                                <ffimageloadingsvg:SvgCachedImage Source="Rightsign.svg" IsVisible="{Binding Edit}" WidthRequest="15" HeightRequest="15"></ffimageloadingsvg:SvgCachedImage>
                                <Label Text="{Binding Property}" TextColor="Black" FontSize="18"></Label>
                                <Label Text="{Static resx:AppResources.Edit}" IsVisible="{Binding Edit}" TextColor="#034C82" HorizontalOptions="EndAndExpand"  FontSize="18"></Label>
                            </StackLayout>
                        </DataTemplate>
                    </dxe:ComboBoxEdit.ItemTemplate>
                </dxe:ComboBoxEdit>
            </StackLayout>
            <StackLayout  HorizontalOptions="FillAndExpand" x:Name="stkBasic" IsVisible="True" VerticalOptions="FillAndExpand" Grid.Row="2">
