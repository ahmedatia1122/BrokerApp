                                            <pankace:PancakeView x:Name="panck"  BackgroundColor="#EBEBEB" CornerRadius="5" Padding="10">
                                                <pankace:PancakeView.Border>
                                                    <pankace:Border Thickness="1" Color="#EBEBEB"/>
                                                </pankace:PancakeView.Border>
                                                <StackLayout>
                                                    <Label Text="{Binding Name}" x:Name="_label" FontSize="13" FontAttributes="Bold" TextColor="Black" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"></Label>

                                                </StackLayout>

                                            </pankace:PancakeView>

                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
