                                                    <pankace:PancakeView.Border>
                                                        <pankace:Border Thickness="1" Color="#e3e3e3"/>
                                                    </pankace:PancakeView.Border>
                                                    <Label Text="{Binding Name}" x:Name="_label" FontSize="12" FontAttributes="Bold" TextColor="Black" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"></Label>

                                                </pankace:PancakeView>
                                            </Grid>
                                        </ContentView>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>

