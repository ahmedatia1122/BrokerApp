                                    <TapGestureRecognizer Command="{Binding UpdatePropertyProjectCommand}" NumberOfTapsRequired="1"/>
                                </Frame.GestureRecognizers>
                            </Frame>
                            <Frame BackgroundColor="#C8A455" x:Name="framPuplish" HasShadow="False" CornerRadius="10">
                                <Label Text="{Static resx:AppResources.Publish}" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"></Label>
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding UpdatePropertyCommand}" NumberOfTapsRequired="1"/>
                                </Frame.GestureRecognizers>
                            </Frame>
